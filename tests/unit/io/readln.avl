import io


def __main__ = (val args : [string]) -> void:
    -- request the user to enter their name
    Io.print("Please enter your name: ")

    -- read the user name from standard input
    val name = Io.readln()

    -- print the user name
    Io.println("Your name is: " + name)

    return
